<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>

        <item name="colorPrimary">#44ADFC</item>

        <item name="toolbarStyle">@style/VikiCast.Default.ActionBar</item>
        <item name="colorControlNormal">#FFFFFFFF</item>

        <item name="android:textColorSecondary">#FFFFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFFFF</item>
    </style>


    <style name="VikiCast.Default.ActionBar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="VikiCast.Toolbar.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

</resources>